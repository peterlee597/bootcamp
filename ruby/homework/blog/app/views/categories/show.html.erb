<h1 class = header><%= @category.name %></h1>
<h3 class = description><em><%= @category.description %></em></h3>

<%= link_to "Home", root_path %>

<ul>
  <li><%= link_to "Edit", edit_category_path(@category) %></li>
  <li><%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2 class = header>Articles</h2>

  <% @articles.each do |article| %>
    <ul>
      <%= link_to article.title, article_path(article) if article.category_id == @category.id %>

    </ul>
  <% end %>

  <br> 

  <%= link_to "Create a New Article", new_article_path %>